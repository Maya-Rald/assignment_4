<!--User Lists-->


<%= render 'books/list', { user: @user, book: @book } %>

<div class="col-xs-9">
  <h2>Users</h2>
  <table class="table">
    <tead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </tead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>